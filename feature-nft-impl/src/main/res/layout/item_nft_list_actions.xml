<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:layout_marginEnd="11dp"
    android:background="@drawable/bg_shimmering_container">

    <TextView
        android:id="@+id/nftActionsSend"
        style="@style/Widget.Nova.ActionButton"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="@string/wallet_asset_send"

        app:drawableTopCompat="@drawable/ic_send"
        tools:drawableTop="@drawable/ic_send" />

    <TextView
        android:id="@+id/nftActionsReceive"
        style="@style/Widget.Nova.ActionButton"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="@string/wallet_asset_receive"
        app:drawableTopCompat="@drawable/ic_receive"
        tools:drawableTop="@drawable/ic_receive" />

</LinearLayout>