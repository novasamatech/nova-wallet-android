<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:background="@color/secondary_screen_background">

    <io.novafoundation.nova.common.view.Toolbar
        android:id="@+id/exportJsonPasswordToolbar"
        android:layout_width="match_parent"
        app:dividerVisible="false"
        android:layout_height="wrap_content" />

    <TextView
        style="@style/TextAppearance.NovaFoundation.Header2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:textColor="@color/text_primary"
        android:text="@string/account_export_json_password_title" />

    <TextView
        style="@style/TextAppearance.NovaFoundation.Regular.SubHeadline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:text="@string/account_export_json_password_subtitle"
        android:textColor="@color/text_secondary" />

    <io.novafoundation.nova.common.view.InputField
        style="@style/Widget.Nova.Input.Primary.External"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:hint="@string/export_json_password_new"
        app:passwordToggleEnabled="true"
        android:id="@+id/exportJsonPasswordNewField"
        app:passwordToggleTint="@color/icon_primary" />

    <io.novafoundation.nova.common.view.InputField
        style="@style/Widget.Nova.Input.Primary.External"
        android:layout_width="match_parent"
        android:id="@+id/exportJsonPasswordConfirmField"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:hint="@string/export_json_password_confirm"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="@color/icon_primary" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <io.novafoundation.nova.common.view.PrimaryButton
        android:id="@+id/exportJsonPasswordNext"
        style="@style/Widget.Nova.Button.Primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="24dp"
        android:text="@string/common_continue" />

</LinearLayout>