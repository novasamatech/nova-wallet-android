<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/advancedEncryptionContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:background="@color/secondary_screen_background">

    <io.novafoundation.nova.common.view.Toolbar
        android:id="@+id/advancedEncryptionToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:dividerVisible="false"
        app:homeButtonIcon="@drawable/ic_close"
        app:titleText="@string/common_advanced" />

    <io.novafoundation.nova.common.view.LabeledTextView
        android:id="@+id/advancedEncryptionSubstrateCryptoType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        app:actionIcon="@drawable/ic_pin_white_24"
        app:label="@string/account_substrate_crypto_type"
        app:message="@string/sr25519_selection_title" />

    <io.novafoundation.nova.common.view.InputField
        android:id="@+id/advancedEncryptionSubstrateDerivationPath"
        style="@style/Widget.Nova.Input.Primary.External"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:hint="@string/account_substrate_derivation_path" />

    <io.novafoundation.nova.common.view.LabeledTextView
        android:id="@+id/advancedEncryptionEthereumCryptoType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:enabled="false"
        app:label="@string/account_ethereum_crypto_type"
        app:message="@string/sr25519_selection_title"/>

    <io.novafoundation.nova.common.view.InputField
        android:id="@+id/advancedEncryptionEthereumDerivationPath"
        style="@style/Widget.Nova.Input.Primary.External"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:hint="@string/account_ethereum_derivation_path" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <io.novafoundation.nova.common.view.PrimaryButton
        android:id="@+id/advancedEncryptionApply"
        style="@style/Widget.Nova.Button.Primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="@string/common_apply" />

</LinearLayout>