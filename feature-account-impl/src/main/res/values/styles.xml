<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Widget.Nova.Button.PinCodeNumberButton" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">32sp</item>
        <item name="android:background">@drawable/bg_pincode_number_button</item>
        <item name="android:textAppearance">@style/TextAppearance.NovaFoundation.Body2</item>
        <item name="android:fontFamily">?attr/fontExtraLight</item>
        <item name="android:layout_width">@dimen/pin_code_number_button_size</item>
        <item name="android:layout_height">@dimen/pin_code_number_button_size</item>
    </style>

    <style name="Widget.Nova.Button.PinCodeControlButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">@drawable/bg_pincode_control_button</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:elevation">2dp</item>
        <item name="android:layout_width">@dimen/pin_code_number_button_size</item>
        <item name="android:layout_height">@dimen/pin_code_number_button_size</item>
    </style>

    <style name="Widget.Nova.Text.SettingsHeader" parent="TextAppearance.NovaFoundation.Caps">
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingTop">24dp</item>

        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="Widget.Nova.Text.Mnemonic" parent="TextAppearance.AppCompat.Body1">
        <item name="lineHeight">22sp</item>
    </style>
</resources>