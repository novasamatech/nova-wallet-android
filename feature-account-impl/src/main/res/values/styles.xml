<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Widget.Nova.Button.PinCodeNumberButton" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">25sp</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:textAppearance">@style/TextAppearance.NovaFoundation.Body2</item>
        <item name="android:fontFamily">?attr/fontRegular</item>
    </style>

    <style name="Widget.Nova.Button.PinCodeControlButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:elevation">2dp</item>
    </style>

    <style name="Widget.Nova.Text.SettingsHeader" parent="TextAppearance.NovaFoundation.Caps">
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingTop">24dp</item>

        <item name="android:textColor">@color/white_64</item>
    </style>
</resources>