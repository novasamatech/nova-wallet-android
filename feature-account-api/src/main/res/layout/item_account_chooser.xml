<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_primary_list_item"
    android:orientation="horizontal"
    tools:background="@color/secondary_screen_background">

    <io.novafoundation.nova.feature_account_api.view.AccountView
        android:id="@+id/itemAccountChooserAddress"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:showBackground="false"
        android:layout_weight="1" />

    <RadioButton
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="16dp"
        android:id="@+id/itemAccountChooserCheck"
        android:layout_width="wrap_content"
        android:clickable="false"
        android:duplicateParentState="true"
        android:buttonTint="@color/tint_radio_button"
        android:layout_height="wrap_content" />

</LinearLayout>