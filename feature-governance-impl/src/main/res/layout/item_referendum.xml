<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/itemCrowdloanGroup"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="4dp"
    android:orientation="vertical"
    android:paddingVertical="16dp"
    tools:background="@color/block_background">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp">

        <TextView
            android:id="@+id/itemReferendumStatus"
            style="@style/TextAppearance.NovaFoundation.SemiBold.Caps1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:includeFontPadding="false"
            android:layout_weight="1"
            android:textColor="@color/text_primary"
            tools:text="Passing" />

        <TextView
            android:id="@+id/itemReferendumTimeEstimate"
            style="@style/TextAppearance.NovaFoundation.Regular.Caption1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:ellipsize="end"
            android:gravity="end"
            android:includeFontPadding="false"
            android:maxLines="2"
            android:textColor="@color/text_secondary"
            tools:text="Approve in 3:59:59" />

    </LinearLayout>

    <TextView
        android:id="@+id/itemReferendumName"
        style="@style/TextAppearance.NovaFoundation.Regular.SubHeadline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/text_primary"
        tools:text="Runtime upgrade to 9280" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">

        <io.novafoundation.nova.feature_governance_impl.presentation.view.NovaChipView
            android:id="@+id/itemReferendumTrack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="6dp"
            tools:chipIcon="@drawable/ic_info_cicrle_filled_16"
            tools:text="main agenda" />

        <io.novafoundation.nova.feature_governance_impl.presentation.view.NovaChipView
            android:id="@+id/itemReferendumNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="#228" />

    </LinearLayout>

    <io.novafoundation.nova.feature_governance_impl.presentation.view.VotingThresholdView
        android:id="@+id/itemReferendumThreshold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:clipToPadding="false"
        android:paddingHorizontal="16dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="12dp"
        android:id="@+id/itermReferendumDivider"
        android:layout_marginHorizontal="16dp"
        android:background="@color/divider" />

    <io.novafoundation.nova.feature_governance_impl.presentation.referenda.list.view.YourMultiVotePreviewView
        android:layout_width="match_parent"
        android:layout_marginHorizontal="16dp"
        android:id="@+id/itemReferendumYourVote"
        android:layout_height="wrap_content" />
</LinearLayout>