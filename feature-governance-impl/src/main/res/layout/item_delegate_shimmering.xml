<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:background="@drawable/bg_shimmering_container"
    android:paddingHorizontal="12dp"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    tools:background="@color/block_background">

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/itemDelegateAvatarShimmering"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/bg_shimmering_circle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.facebook.shimmer.ShimmerFrameLayout
        android:layout_width="178dp"
        android:layout_height="10dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/bg_shimmering"
        app:layout_constraintStart_toEndOf="@+id/itemDelegateAvatarShimmering"
        app:layout_constraintTop_toTopOf="@+id/itemDelegateAvatarShimmering" />

    <com.facebook.shimmer.ShimmerFrameLayout
        android:layout_width="111dp"
        android:layout_height="16dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/bg_shimmering"
        android:layout_marginStart="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/itemDelegateAvatarShimmering"
        app:layout_constraintStart_toEndOf="@+id/itemDelegateAvatarShimmering"/>

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/itemDelegateDescriptionShimmer"
        android:layout_width="178dp"
        android:layout_height="8dp"
        android:layout_marginTop="22dp"
        android:background="@drawable/bg_shimerring_8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/itemDelegateAvatarShimmering" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/itemDelegateStatsShimmering"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:barrierMargin="20dp"
        android:layout_marginTop="12dp"
        app:constraint_referenced_ids="itemDelegateDescriptionShimmer" />

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/itemDelegateFirstStatTitleShimmering"
        android:layout_width="47dp"
        android:layout_height="6dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/bg_shimmering"
        android:textColor="@color/text_secondary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/itemDelegateStatsShimmering" />

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/itemDelegateFirstStatValueShimmering"
        android:layout_width="60dp"
        android:layout_height="10dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_shimmering"
        android:textColor="@color/text_secondary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/itemDelegateFirstStatTitleShimmering" />

    <View
        android:id="@+id/itemDelegateFirstStatShimmeringDivider"
        android:layout_width="1dp"
        android:layout_height="31dp"
        android:layout_marginStart="12dp"
        android:background="@color/divider"
        app:layout_constraintStart_toEndOf="@+id/itemDelegateFirstStatValueShimmering"
        app:layout_constraintTop_toTopOf="@id/itemDelegateStatsShimmering"
        tools:layout_editor_absoluteY="18dp" />





    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/itemDelegateSecondStatTitleShimmering"
        android:layout_width="47dp"
        android:layout_height="6dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/bg_shimmering"
        android:textColor="@color/text_secondary"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toEndOf="@id/itemDelegateFirstStatShimmeringDivider"
        app:layout_constraintTop_toBottomOf="@+id/itemDelegateStatsShimmering" />

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/itemDelegateSecondStatValueShimmering"
        android:layout_width="60dp"
        android:layout_height="10dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_shimmering"
        android:textColor="@color/text_secondary"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toEndOf="@id/itemDelegateFirstStatShimmeringDivider"
        app:layout_constraintTop_toBottomOf="@+id/itemDelegateSecondStatTitleShimmering" />

    <View
        android:id="@+id/itemDelegateSecondStatShimmeringDivider"
        android:layout_width="1dp"
        android:layout_height="31dp"
        android:layout_marginStart="12dp"
        android:background="@color/divider"
        app:layout_constraintStart_toEndOf="@+id/itemDelegateSecondStatValueShimmering"
        app:layout_constraintTop_toTopOf="@id/itemDelegateStatsShimmering"
        tools:layout_editor_absoluteY="18dp" />


    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/itemDelegateThirdStatTitleShimmering"
        android:layout_width="47dp"
        android:layout_height="6dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/bg_shimmering"
        android:textColor="@color/text_secondary"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toEndOf="@id/itemDelegateSecondStatShimmeringDivider"
        app:layout_constraintTop_toBottomOf="@+id/itemDelegateStatsShimmering" />

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/itemDelegateThirdStatValueShimmering"
        android:layout_width="60dp"
        android:layout_height="10dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_shimmering"
        android:textColor="@color/text_secondary"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toEndOf="@id/itemDelegateSecondStatShimmeringDivider"
        app:layout_constraintTop_toBottomOf="@+id/itemDelegateSecondStatTitleShimmering" />

</androidx.constraintlayout.widget.ConstraintLayout>