<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:background="@color/block_background"
    tools:orientation="vertical"
    tools:parentTag="android.widget.LinearLayout">

    <io.novafoundation.nova.common.view.TableView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:showBackground="false"
        app:title="@string/delegation_your_delegation">

        <io.novafoundation.nova.common.view.TableCellView
            android:id="@+id/viewYourDelegationTracks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="@string/delegation_tracks"
            app:primaryValueEndIcon="@drawable/ic_info" />

        <io.novafoundation.nova.common.view.TableCellView
            android:id="@+id/viewYourDelegationDelegation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="@string/delegation_your_delegation" />
    </io.novafoundation.nova.common.view.TableView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="horizontal">

        <io.novafoundation.nova.common.view.PrimaryButton
            android:id="@+id/viewYourDelegationRemove"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:layout_weight="1"
            android:text="@string/common_revoke"
            app:appearance="secondary" />

        <io.novafoundation.nova.common.view.PrimaryButton
            android:id="@+id/viewYourDelegationEdit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/common_edit"
            app:appearance="primary" />
    </LinearLayout>
</merge>