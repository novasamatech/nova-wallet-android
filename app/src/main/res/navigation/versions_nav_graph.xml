        android:label="NftListFragment"
        tools:layout="@layout/fragment_nft_list">

        <action
            android:id="@+id/action_nftListFragment_to_nftDetailsFragment"
            app:destination="@id/nftDetailsFragment"
            app:enterAnim="@anim/fragment_open_enter"
