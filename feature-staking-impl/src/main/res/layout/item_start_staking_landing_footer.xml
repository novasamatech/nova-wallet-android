<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/TextAppearance.NovaFoundation.Bold.Title1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="32dp"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/itemStakingLandingFooterMoreInfo"
        style="@style/TextAppearance.NovaFoundation.Regular.Callout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal|bottom"
        android:textColor="@color/text_tertiary"
        tools:text="@string/start_staking_fragment_more_info" />

    <TextView
        android:id="@+id/itemStakingLandingFooterTermsOfUse"
        style="@style/TextAppearance.NovaFoundation.Regular.Callout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center_horizontal"
        android:textColor="@color/text_tertiary"
        tools:text="@string/start_staking_fragment_terms_of_use" />

</LinearLayout>