<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/drawable_background_image"
    android:layout_height="match_parent">

    <io.novafoundation.nova.common.view.Toolbar
        android:layout_width="match_parent"
        android:id="@+id/moreStakingOptionsToolbar"
        app:titleText="@string/staking_dashboard_more_options"
        app:contentBackground="@android:color/transparent"
        android:background="@color/blur_navigation_background"
        android:layout_height="wrap_content" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:clipToPadding="false"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:paddingBottom="64dp"
        android:id="@+id/moreStakingOptionsContent"
        android:layout_weight="1" />
</LinearLayout>