<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/confirmUnbondContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:background="@color/black">

    <io.novafoundation.nova.common.view.Toolbar
        android:id="@+id/confirmUnbondToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleText="@string/common_confirm" />

    <io.novafoundation.nova.common.view.LabeledTextView
        android:id="@+id/confirmUnbondOriginAccount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:actionIcon="@drawable/ic_more"
        app:label="@string/account_info_title" />

    <io.novafoundation.nova.common.view.AmountView
        android:id="@+id/confirmUnbondAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:enabled="false" />

    <TextView
        style="@style/TextAppearance.NovaFoundation.Body2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:drawablePadding="8dp"
        android:gravity="left|center"
        android:includeFontPadding="false"
        android:text="@string/staking_hint_no_rewards_v2_2_0"
        android:textColor="@color/white"
        app:drawableLeftCompat="@drawable/ic_nova" />

    <TextView
        style="@style/TextAppearance.NovaFoundation.Body2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:drawablePadding="8dp"
        android:gravity="left|center"
        android:includeFontPadding="false"
        android:text="@string/staking_hint_unbond_kills_stash"
        android:textColor="@color/white"
        app:drawableLeftCompat="@drawable/ic_nova" />

    <TextView
        style="@style/TextAppearance.NovaFoundation.Body2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:drawablePadding="8dp"
        android:gravity="left|center"
        android:includeFontPadding="false"
        android:text="@string/staking_hint_redeem_v2_2_0"
        android:textColor="@color/white"
        app:drawableLeftCompat="@drawable/ic_nova" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black4"
        android:orientation="vertical">

        <io.novafoundation.nova.feature_wallet_api.presentation.view.FeeView
            android:id="@+id/confirmUnbondFee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp" />

        <io.novafoundation.nova.common.view.PrimaryButton
            android:id="@+id/confirmUnbondConfirm"
            style="@style/Widget.Nova.Button.Primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="@string/common_confirm" />
    </LinearLayout>
</LinearLayout>