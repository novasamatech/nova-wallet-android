<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:background="@color/black"
    tools:orientation="vertical"
    tools:parentTag="android.widget.LinearLayout">

    <TextView
        android:id="@+id/stakingInfoTitle"
        style="@style/TextAppearance.NovaFoundation.Body2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:singleLine="true"
        android:textColor="@color/gray1"
        tools:text="Monthly" />

    <TextView
        android:id="@+id/stakingInfoGain"
        style="@style/TextAppearance.NovaFoundation.Title3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:includeFontPadding="false"
        android:layout_marginTop="4dp"
        android:singleLine="true"
        android:visibility="gone"
        android:textColor="@color/green"
        tools:text="22.12%" />

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/stakingInfoGainShimmer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:visibility="visible">

        <View
            android:layout_width="72dp"
            android:layout_height="12dp"
            android:layout_gravity="center"
            android:background="@drawable/bg_grey_solid_rounded" />

    </com.facebook.shimmer.ShimmerFrameLayout>

</merge>