<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/confirmBondMoreContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:background="@color/black">

    <io.novafoundation.nova.common.view.Toolbar
        android:id="@+id/confirmBondMoreToolbar"
        android:layout_width="match_parent"
        app:dividerVisible="false"
        android:layout_height="wrap_content"
        app:titleText="@string/staking_bond_more_v1_9_0" />

    <io.novafoundation.nova.feature_wallet_api.presentation.view.amount.PrimaryAmountView
        android:id="@+id/confirmBondMoreAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp" />

    <io.novafoundation.nova.common.view.TableView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp">

        <io.novafoundation.nova.common.view.TableCellView
            android:id="@+id/confirmBondMoreWallet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="@string/tabbar_wallet_title" />

        <io.novafoundation.nova.common.view.TableCellView
            android:id="@+id/confirmBondMoreAccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:primaryValueIcon="@drawable/ic_info_16"
            app:primaryValueIconTint="@color/white_64"
            app:title="@string/common_account" />

        <io.novafoundation.nova.feature_wallet_api.presentation.view.FeeView
            android:id="@+id/confirmBondMoreFee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </io.novafoundation.nova.common.view.TableView>

    <io.novafoundation.nova.common.mixin.hints.HintsView
        android:layout_width="match_parent"
        android:id="@+id/confirmBondMoreHints"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <io.novafoundation.nova.common.view.PrimaryButton
        android:id="@+id/confirmBondMoreConfirm"
        style="@style/Widget.Nova.Button.Primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="@string/common_confirm" />


</LinearLayout>