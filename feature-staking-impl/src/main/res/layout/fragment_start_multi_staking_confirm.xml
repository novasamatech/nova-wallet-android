<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/startMultiStakingConfirmContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:background="@color/secondary_screen_background">

    <io.novafoundation.nova.common.view.Toolbar
        android:id="@+id/startMultiStakingConfirmToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:dividerVisible="false"
        app:titleText="@string/staking_start_title" />

    <io.novafoundation.nova.feature_wallet_api.presentation.view.amount.PrimaryAmountView
        android:id="@+id/startMultiStakingConfirmAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp" />

    <io.novafoundation.nova.feature_wallet_api.presentation.view.extrinsic.GenericExtrinsicInformationView
        android:id="@+id/startMultiStakingConfirmExtrinsicInformation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="24dp" />

    <io.novafoundation.nova.common.view.TableView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp">

        <io.novafoundation.nova.common.view.TableCellView
            android:id="@+id/startMultiStakingConfirmStakingType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="@string/staking_staking_type" />

        <io.novafoundation.nova.common.view.TableCellView
            android:id="@+id/startMultiStakingConfirmStakingTypeDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:primaryValueIcon="@drawable/ic_info_cicrle_filled_16"
            tools:title="Pool" />

    </io.novafoundation.nova.common.view.TableView>

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <io.novafoundation.nova.common.view.PrimaryButton
        android:id="@+id/startMultiStakingConfirmConfirm"
        style="@style/Widget.Nova.Button.Primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="@string/common_confirm" />


</LinearLayout>