<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/balanceListActions"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="horizontal"
    tools:background="@color/block_background"
    tools:parentTag="android.widget.LinearLayout">

    <TextView
        android:id="@+id/stakingBalanceActionsBondMore"
        style="@style/Widget.Nova.ActionButton"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:drawableTop="@drawable/ic_add_circle_outline"
        android:text="@string/staking_bond_more_v1_9_0" />

    <TextView
        android:id="@+id/stakingBalanceActionsUnbond"
        style="@style/Widget.Nova.ActionButton"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:drawableTop="@drawable/ic_minus_circle_outline"
        android:text="@string/staking_unbond_v1_9_0"/>

    <TextView
        android:id="@+id/stakingBalanceActionsRedeem"
        style="@style/Widget.Nova.ActionButton"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:drawableTop="@drawable/ic_redeem"
        android:text="@string/staking_redeem" />
</merge>
