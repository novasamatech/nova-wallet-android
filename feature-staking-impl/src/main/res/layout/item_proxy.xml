<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/itemStakingProxyContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_primary_list_item"
    tools:background="@color/secondary_screen_background">

    <ImageView
        android:id="@+id/itemStakingProxyIcon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_goneMarginStart="16dp"
        tools:src="@color/icon_primary" />

    <ImageView
        android:id="@+id/itemStakingProxyChainIcon"
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="19dp"
        android:background="@drawable/bg_chain_wallet"
        android:padding="1.5dp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@+id/itemStakingProxyIcon"
        app:layout_constraintTop_toTopOf="@+id/itemStakingProxyIcon"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/itemStakingProxyAccountTitle"
        style="@style/TextAppearance.NovaFoundation.Regular.SubHeadline"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/text_primary"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/itemStakingProxyDots"
        app:layout_constraintStart_toEndOf="@+id/itemStakingProxyIcon"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="✨👍✨ Day7 ✨👍✨" />

    <ImageView
        android:id="@+id/itemStakingProxyDots"
        android:layout_width="24dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_three_dots"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>