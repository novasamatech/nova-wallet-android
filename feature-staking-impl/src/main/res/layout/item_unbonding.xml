<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/itemUnbondingIcon"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/bg_icon_round_white"
        android:padding="6dp"
        android:src="@drawable/ic_staking_filled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/white_64" />

    <TextView
        android:id="@+id/itemUnbondUnstake"
        style="@style/TextAppearance.NovaFoundation.Regular.SubHeadline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="9dp"
        android:text="@string/staking_unbond_v1_9_0"
        android:textColor="@color/white_64"
        app:layout_constraintStart_toEndOf="@id/itemUnbondingIcon"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/itemUnbondAmount"
        style="@style/TextAppearance.NovaFoundation.Regular.SubHeadline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/itemUnbondUnstake"
        app:layout_constraintStart_toEndOf="@id/itemUnbondUnstake"
        app:layout_constraintTop_toTopOf="@id/itemUnbondUnstake"
        tools:text="0.1 KSM" />

    <TextView
        android:id="@+id/itemUnbondStatus"
        style="@style/TextAppearance.NovaFoundation.Regular.Caption1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        app:layout_constraintStart_toStartOf="@+id/itemUnbondUnstake"
        app:layout_constraintTop_toBottomOf="@+id/itemUnbondUnstake"
        tools:drawablePadding="4dp"
        tools:drawableStart="@drawable/ic_time_16"
        tools:drawableTint="@color/white_48"
        tools:text="4 days left"
        tools:textColor="@color/white_64" />

</androidx.constraintlayout.widget.ConstraintLayout>