<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="16dp"
    android:id="@+id/itemCurrentValidatorContainer"
    android:paddingTop="16dp"
    android:paddingEnd="16dp"
    android:paddingBottom="8dp"
    tools:background="@color/secondary_screen_background">

    <TextView
        android:id="@+id/itemCurrentValidatorGroupStatus"
        style="@style/TextAppearance.NovaFoundation.SemiBold.Body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:includeFontPadding="false"
        android:drawablePadding="8dp"
        android:textColor="@color/text_primary"
        tools:drawableStart="@drawable/ic_checkmark_circle_16"
        tools:drawableTint="@color/icon_positive"
        tools:text="Active (1)" />

    <TextView
        android:id="@+id/itemCurrentValidatorGroupDescription"
        style="@style/TextAppearance.NovaFoundation.Regular.Footnote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_secondary"
        tools:text="Your stake is allocated to the following validator." />

</LinearLayout>