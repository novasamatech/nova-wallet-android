<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/payContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/drawable_background_image"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/payAppBarContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <io.novafoundation.nova.common.view.WalletAppBarView
            android:id="@+id/payAppBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <io.novafoundation.nova.common.view.SegmentedTabLayout
            android:id="@+id/payTabs"
            style="@style/SegmentedTab.OnLight"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="8dp" />
    </LinearLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/payViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
