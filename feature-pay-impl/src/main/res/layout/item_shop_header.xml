<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <io.novafoundation.nova.common.view.ChipLabelView
        android:id="@+id/brandsHeaderChip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:backgroundTint="@color/polkadot_background"
        android:text="@string/polkadot_pay_common"
        android:textColor="@color/text_primary"
        app:iconStart="@drawable/ic_polkadot_icon"
        app:iconStartTint="@color/icon_primary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/brandsHeaderTitle"
        style="@style/TextAppearance.NovaFoundation.Bold.Title1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:paddingHorizontal="16dp"
        android:textColor="@color/text_primary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/brandsHeaderChip"
        tools:text="Get up to 15% cashback" />

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/brandsHeaderTitleShimmering"
        android:layout_width="match_parent"
        android:layout_height="18dp"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/bg_shimerring_8"
        app:layout_constraintBottom_toBottomOf="@+id/brandsHeaderTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/brandsHeaderTitle" />

    <TextView
        android:id="@+id/textView"
        style="@style/TextAppearance.NovaFoundation.Regular.SubHeadline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:text="@string/shop_brands_subtitle"
        android:textColor="@color/text_secondary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/brandsHeaderTitle" />

</androidx.constraintlayout.widget.ConstraintLayout>

