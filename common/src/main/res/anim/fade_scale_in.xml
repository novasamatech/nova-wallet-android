<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android" android:startOffset="100">

    <scale
        android:duration="100"
        android:fromXScale="0.85"
        android:fromYScale="0.85"
        android:interpolator="@android:interpolator/overshoot"
        android:pivotX="50%"
        android:pivotY="50%"
        android:toXScale="1"
        android:toYScale="1" />

    <alpha
        android:duration="100"
        android:fromAlpha="0"
        android:toAlpha="1" />
</set>