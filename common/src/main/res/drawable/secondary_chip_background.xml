<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true">
        <ripple android:color="@color/cell_background_pressed">
            <item android:id="@android:id/mask" android:gravity="center">
                <shape android:shape="rectangle">
                    <corners android:radius="10dp" />
                    <solid android:color="#fff"/>
                </shape>
            </item>

            <item android:gravity="center">
                <shape android:shape="rectangle">
                    <solid android:color="@color/button_background_secondary" />

                    <corners android:radius="10dp" />
                </shape>
            </item>
        </ripple>
    </item>

    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/button_background_inactive_on_gradient" />

            <corners android:radius="10dp" />
        </shape>
    </item>
</selector>
