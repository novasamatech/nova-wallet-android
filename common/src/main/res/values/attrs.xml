<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--fonts-->
    <attr name="fontExtraLight" format="reference" />
    <attr name="fontSemiBold" format="reference" />
    <attr name="fontBold" format="reference" />
    <attr name="fontExtraBold" format="reference" />
    <attr name="fontRegular" format="reference" />
    <!--fonts-->

    <!--text sizes-->
    <attr name="textSizeH1" format="reference" />
    <attr name="textSizeH2" format="reference" />
    <attr name="textSizeH3" format="reference" />
    <attr name="textSizeH4" format="reference" />
    <attr name="textSizeH5" format="reference" />
    <attr name="textSizeCapsTitle1" format="reference" />
    <attr name="textSizeCapsTitle2" format="reference" />
    <attr name="textSizeB0" format="reference" />
    <attr name="textSizeB1" format="reference" />
    <attr name="textSizeB2" format="reference" />
    <attr name="textSizeB3" format="reference" />

    <attr name="textSizeTitle3" format="reference" />
    <attr name="textSizeSubHeadline" format="reference" />

    <!--text sizes-->

    <!-- Views -->
    <attr name="defaultTextInputStyle" format="reference" />

    <declare-styleable name="Toolbar">
        <attr name="contentBackground" format="reference|color" />
        <attr name="dividerVisible" format="boolean" />
        <attr name="titleText" format="string" />
        <attr name="iconRight" format="reference|color" />
        <attr name="textRight" format="string" />
        <attr name="homeButtonIcon" format="reference|color" />
        <attr name="homeButtonVisible" format="boolean" />
        <attr name="titleTextAppearance" format="reference" />
    </declare-styleable>

    <declare-styleable name="LabeledTextView">
        <attr name="label" format="string" />
        <attr name="message" format="string" />
        <attr name="actionIcon" format="reference|color" />
        <attr name="textIcon" format="reference|color" />
        <attr name="enabled" format="boolean" />
        <attr name="android:singleLine" />

        <attr name="messageStyle" format="reference" />
    </declare-styleable>

    <declare-styleable name="AccountInfoView">
        <attr name="accountActionIcon" format="reference|color" />
        <attr name="textVisible" format="boolean" />
    </declare-styleable>

    <declare-styleable name="InputField">
        <attr name="android:inputType" />
        <attr name="android:text" />
    </declare-styleable>

    <declare-styleable name="AmountView">
        <attr name="android:enabled" />
    </declare-styleable>

    <declare-styleable name="TableCellView">
        <attr name="title" />
        <attr name="dividerVisible" />
        <attr name="primaryValueIcon" format="reference|color" />
        <attr name="primaryValueStyle" format="enum">
            <enum name="text" value="0" />
            <enum name="link" value="1" />
        </attr>
        <attr name="titleValueTextAppearance" format="reference" />
        <attr name="primaryValueTextAppearance" format="reference" />
        <attr name="secondaryValueTextAppearance" format="reference" />
        <attr name="titleIcon" format="reference|color" />
        <attr name="primaryValueIconTint" format="color" />
    </declare-styleable>

    <declare-styleable name="TableView">
        <attr name="title" />
    </declare-styleable>

    <declare-styleable name="GoNextView">
        <attr name="inProgress" format="boolean" />
        <attr name="android:text" />
        <attr name="icon" />
        <attr name="iconTint" />
        <attr name="actionIcon" />
        <attr name="dividerVisible" />
        <attr name="android:textAppearance" format="reference" />
        <attr name="actionTint" format="color" />
        <attr name="android:background" />
    </declare-styleable>

    <declare-styleable name="PrimaryButton">
        <attr name="appearance" format="enum">
            <enum name="primary" value="0" />
            <enum name="primaryTransparent" value="1" />
            <enum name="secondary" value="2" />
            <enum name="secondaryTransparent" value="3" />
            <enum name="primaryPositive" value="4" />
            <enum name="primaryNegative" value="5" />
        </attr>

        <attr name="size" format="enum">
            <enum name="large" value="0" />
            <enum name="small" value="1" />
        </attr>
    </declare-styleable>

    <declare-styleable name="PlaceholderView">
        <attr name="android:text" />
        <attr name="image" format="color|reference" />
        <attr name="placeholderBackgroundStyle" format="enum">
            <enum name="dark" value="0" />
            <enum name="light" value="1" />
            <enum name="no_background" value="2" />
        </attr>
    </declare-styleable>

    <declare-styleable name="TitleImageContentSectionView">
        <attr name="sectionTitle" format="string" />
        <attr name="sectionContentEndIcon" format="reference|color" />
        <attr name="sectionContentEndIconTint" format="color" />
    </declare-styleable>

    <declare-styleable name="SearchView">
        <attr name="android:hint" />
        <attr name="icon" />
    </declare-styleable>

    <declare-styleable name="Switch">
        <attr name="title" />
        <attr name="subtitle" />
        <attr name="dividerVisible" />
    </declare-styleable>

    <declare-styleable name="AdvertisementCard">
        <attr name="title" />
        <attr name="subtitle" />
        <attr name="image" />
        <attr name="learnMore" format="string" />
        <attr name="action" format="string" />
    </declare-styleable>

    <declare-styleable name="AlertView">
        <attr name="style" format="enum">
            <enum name="warning" value="0" />
            <enum name="error" value="1" />
        </attr>

        <attr name="styleBackgroundColor" format="color" />
        <attr name="styleIcon" format="color|reference" />

        <attr name="android:text" />
    </declare-styleable>

    <declare-styleable name="IconButton">
        <attr name="android:src" />
    </declare-styleable>

    <declare-styleable name="SearchToolbar">
        <attr name="android:hint" />
    </declare-styleable>

    <declare-styleable name="ButtonLarge">
        <attr name="icon" />
        <attr name="title" />
        <attr name="subTitle" format="string" />
        <attr name="buttonLargeStyle" format="enum">
            <enum name="primary" value="0" />
            <enum name="secondary" value="1" />
        </attr>
    </declare-styleable>

    <declare-styleable name="ScanView">
        <attr name="title" />
        <attr name="subTitle" />
    </declare-styleable>

    <declare-styleable name="InstructionStepView">
        <attr name="stepNumber" format="string" />
        <attr name="stepText" format="string" />
    </declare-styleable>

    <declare-styleable name="NovaConnectView">
        <attr name="targetImage" format="reference" />
    </declare-styleable>

    <declare-styleable name="LinkView">
        <attr name="linkText" format="string" />
    </declare-styleable>

    <declare-styleable name="TotalAmountView">
        <attr name="title" />
    </declare-styleable>

    <declare-styleable name="BannerView">
        <attr name="android:src" format="reference" />
        <attr name="bannerBackground" format="reference|color" />
    </declare-styleable>
</resources>