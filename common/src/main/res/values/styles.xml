<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- SemiBold -->

    <style name="TextAppearance.NovaFoundation.SemiBold" parent="TextAppearance.AppCompat.Title">
        <item name="android:fontFamily">?attr/fontSemiBold</item>
    </style>

    <style name="TextAppearance.NovaFoundation.SemiBold.Title3">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextAppearance.NovaFoundation.SemiBold.Caps">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">10sp</item>
        <item name="android:letterSpacing">0.06</item>
    </style>

    <style name="TextAppearance.NovaFoundation.SemiBold.Caps1">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">11sp</item>
        <item name="android:letterSpacing">0.06</item>
    </style>

    <style name="TextAppearance.NovaFoundation.SemiBold.Caps2">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">10sp</item>
        <item name="android:letterSpacing">0.06</item>
    </style>

    <style name="TextAppearance.NovaFoundation.SemiBold.Body">
        <item name="android:textSize">17sp</item>
        <item name="lineHeight">22sp</item>
    </style>

    <style name="TextAppearance.NovaFoundation.SemiBold.Footnote">
        <item name="android:textSize">13sp</item>
        <item name="lineHeight">18sp</item>
    </style>

    <style name="TextAppearance.NovaFoundation.SemiBold.SubHeadline">
        <item name="android:textSize">?attr/textSizeSubHeadline</item>
    </style>

    <style name="TextAppearance.NovaFoundation.SemiBold.Caption3">
        <item name="android:textSize">9sp</item>
        <item name="lineHeight">11sp</item>
    </style>

    <!-- Bold -->

    <style name="TextAppearance.NovaFoundation.Bold" parent="TextAppearance.AppCompat.Title">
        <item name="android:fontFamily">?attr/fontBold</item>
    </style>

    <style name="TextAppearance.NovaFoundation.Bold.Caps">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">11sp</item>
        <item name="android:letterSpacing">0.05</item>
    </style>

    <style name="TextAppearance.NovaFoundation.Bold.LargeTitle">
        <item name="android:textSize">34sp</item>
    </style>

    <style name="TextAppearance.NovaFoundation.Bold.Title1">
        <item name="android:textSize">28sp</item>
    </style>

    <style name="TextAppearance.NovaFoundation.Bold.Title2">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="TextAppearance.NovaFoundation.Bold.Title3">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextAppearance.NovaFoundation.Bold.SubHeadline">
        <item name="android:textSize">?attr/textSizeSubHeadline</item>
    </style>

    <!-- Regular -->

    <style name="TextAppearance.NovaFoundation.Regular" parent="">
        <item name="android:fontFamily">?attr/fontRegular</item>
    </style>

    <style name="TextAppearance.NovaFoundation.Regular.Body">
        <item name="android:textSize">17sp</item>
        <item name="lineHeight">22sp</item>
    </style>

    <style name="TextAppearance.NovaFoundation.Regular.Caption1">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextAppearance.NovaFoundation.Regular.Caption1.Tertiary" parent="TextAppearance.NovaFoundation.Regular.Caption1">
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="TextAppearance.NovaFoundation.Caps" parent="TextAppearance.NovaFoundation.Regular">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">11sp</item>
        <item name="android:letterSpacing">0.05</item>
    </style>

    <style name="TextAppearance.NovaFoundation.Regular.Title2">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="TextAppearance.NovaFoundation.Regular.Title3">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextAppearance.NovaFoundation.Regular.Footnote">
        <item name="android:textSize">13sp</item>
        <item name="lineHeight">18sp</item>
    </style>

    <style name="TextAppearance.NovaFoundation.Regular.Footnote.Primary" parent="TextAppearance.NovaFoundation.Regular.Footnote">
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextAppearance.NovaFoundation.Regular.Footnote.Tertiary" parent="TextAppearance.NovaFoundation.Regular.Footnote">
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="TextAppearance.NovaFoundation.Regular.SubHeadline">
        <item name="android:textSize">?attr/textSizeSubHeadline</item>
    </style>

    <style name="TextAppearance.NovaFoundation.Title3" parent="TextAppearance.NovaFoundation.Regular">
        <item name="android:textSize">?attr/textSizeTitle3</item>
    </style>

    <!--  Old font styles  -->

    <style name="TextAppearance.Nova.Header" parent="TextAppearance.AppCompat.Title">
        <item name="android:fontFamily">?attr/fontBold</item>
    </style>

    <style name="TextAppearance.NovaFoundation.Header1" parent="TextAppearance.Nova.Header">
        <item name="android:textSize">?attr/textSizeH1</item>
    </style>

    <style name="TextAppearance.NovaFoundation.Header2" parent="TextAppearance.Nova.Header">
        <item name="android:textSize">?attr/textSizeH2</item>
    </style>

    <style name="TextAppearance.NovaFoundation.Header3" parent="TextAppearance.Nova.Header">
        <item name="android:textSize">?attr/textSizeH3</item>
    </style>

    <style name="TextAppearance.NovaFoundation.Header4" parent="TextAppearance.Nova.Header">
        <item name="android:textSize">?attr/textSizeH4</item>
    </style>

    <style name="TextAppearance.NovaFoundation.Header5" parent="TextAppearance.Nova.Header">
        <item name="android:textSize">?attr/textSizeH5</item>
    </style>

    <style name="TextAppearance.NovaFoundation.CapsTitle1" parent="TextAppearance.Nova.Header">
        <item name="android:textSize">?attr/textSizeCapsTitle1</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="TextAppearance.NovaFoundation.CapsTitle2" parent="TextAppearance.Nova.Header">
        <item name="android:textSize">?attr/textSizeCapsTitle2</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="TextAppearance.NovaFoundation.Body0" parent="TextAppearance.AppCompat.Body1">
        <item name="android:fontFamily">?attr/fontRegular</item>
        <item name="android:textSize">?attr/textSizeB0</item>
    </style>

    <style name="TextAppearance.NovaFoundation.Body1" parent="TextAppearance.AppCompat.Body1">
        <item name="android:fontFamily">?attr/fontRegular</item>
        <item name="android:textSize">?attr/textSizeB1</item>
    </style>

    <style name="TextAppearance.NovaFoundation.Body2" parent="TextAppearance.AppCompat.Body1">
        <item name="android:fontFamily">?attr/fontRegular</item>
        <item name="android:textSize">?attr/textSizeB2</item>
    </style>

    <style name="TextAppearance.NovaFoundation.Body3" parent="TextAppearance.AppCompat.Body1">
        <item name="android:fontFamily">?attr/fontSemiBold</item>
        <item name="android:textSize">?attr/textSizeB3</item>
    </style>

    <style name="TextAppearance.NovaFoundation.Regular.Monospace">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">monospace</item>
    </style>

    <!-- Buttons -->

    <style name="Widget.Nova.Button" parent="Widget.AppCompat.Button">
        <item name="size">large</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textColor">@color/button_text_colors</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:textSize">?attr/textSizeB1</item>
        <item name="android:fontFamily">?attr/fontBold</item>
    </style>

    <style name="Widget.Nova.Button.Iconic">
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:textSize">?attr/textSizeSubHeadline</item>
    </style>

    <!-- Button Large -suffix is omitted for compatibility -->

    <style name="Widget.Nova.Button.PrimaryTransparent">
        <item name="appearance">primaryTransparent</item>
    </style>

    <style name="Widget.Nova.Button.Primary">
        <item name="appearance">primary</item>
    </style>

    <style name="Widget.Nova.Button.Secondary">
        <item name="appearance">secondary</item>
    </style>

    <style name="Widget.Nova.Button.SecondaryTransparent">
        <item name="appearance">secondaryTransparent</item>
    </style>

    <!-- Button Small -->

    <style name="Widget.Nova.Button.PrimaryTransparent.Small">
        <item name="size">small</item>
        <item name="appearance">primaryTransparent</item>
    </style>

    <style name="Widget.Nova.Button.Primary.Small">
        <item name="size">small</item>
        <item name="appearance">primary</item>
    </style>

    <style name="Widget.Nova.Button.Secondary.Small">
        <item name="size">small</item>
        <item name="appearance">secondary</item>
    </style>

    <style name="Widget.Nova.Button.SecondaryTransparent.Small">
        <item name="size">small</item>
        <item name="appearance">secondaryTransparent</item>
    </style>

    <!--   Misc   -->

    <style name="AccentBlue" parent="">
        <item name="colorAccent">@color/button_background_primary</item>
    </style>

    <style name="NegativeAccent" parent="">
        <item name="colorAccent">@color/divider</item>
    </style>

    <style name="Widget.Nova.Action" parent="">
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textColor">@color/button_text_colors</item>
        <item name="android:textAppearance">@style/TextAppearance.NovaFoundation.SemiBold.Footnote
        </item>
    </style>

    <style name="Widget.Nova.Action.Primary">
        <item name="android:background">@drawable/primary_chip_background</item>
    </style>

    <style name="Widget.Nova.Action.Secondary">
        <item name="android:background">@drawable/secondary_chip_background</item>
    </style>

    <style name="Widget.Nova.Puller" parent="">
        <item name="android:layout_height">4dp</item>
        <item name="android:layout_width">28dp</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:background">@drawable/bg_puller</item>
    </style>

    <style name="Widget.Nova.Icon.Big" parent="">
        <item name="android:layout_width">88dp</item>
        <item name="android:layout_height">88dp</item>
        <item name="android:background">@drawable/bg_icon_big</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="Widget.Nova.Icon.Big.Dashed">
        <item name="android:background">@drawable/bg_icon_big_dashed</item>
    </style>

    <style name="Widget.Nova.Text.Number" parent="">
        <item name="android:textAppearance">@style/TextAppearance.NovaFoundation.Regular.Body</item>
        <item name="android:textColor">@color/chip_text</item>
        <item name="android:background">@drawable/bg_round_number</item>
        <item name="android:gravity">center</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
    </style>

    <style name="Widget.Nova.ActionButton" parent="TextAppearance.AppCompat.Body2">
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:gravity">center</item>
        <item name="android:drawableTint">@color/actions_color</item>
        <item name="android:textColor">@color/actions_color</item>
        <item name="android:drawablePadding">4dp</item>
    </style>

    <style name="Widget.Nova.Checkbox" parent="">
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="buttonTint">@color/tint_radio_button</item>
    </style>

    <style name="Widget.Nova.RadioButton" parent="">
        <item name="android:paddingStart">4dp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textAppearance">@style/TextAppearance.NovaFoundation.Regular.Footnote
        </item>
        <item name="buttonTint">@color/tint_radio_button</item>
    </style>

    <style name="Widget.Nova.Counter" parent="">
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingTop">1.5dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:paddingBottom">2.5dp</item>
        <item name="android:textColor">@color/chip_text</item>
    </style>

    <style name="Widget.Nova.ChipLabel" parent="">
        <item name="android:paddingStart">6dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:textColor">@color/chip_text</item>
        <item name="android:gravity">center</item>
        <item name="minHeight">22dp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textAppearance">@style/TextAppearance.NovaFoundation.SemiBold.Caps1
        </item>
    </style>

    <style name="Widget.Nova.TabItem" parent="">
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/tab_item_text_color</item>
        <item name="android:textAppearance">@style/TextAppearance.NovaFoundation.Regular.Footnote
        </item>
    </style>

    <!-- Buttons -->

    <!-- Input -->

    <style name="Widget.Nova.Input.EditText" parent="@android:style/Widget.EditText">
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="Widget.Nova.Input.Primary.External" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:textColorHint">@color/hint_text</item>
        <item name="hintTextColor">@color/hint_text</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="boxCollapsedPaddingTop">@dimen/x1</item>
    </style>

    <style name="Widget.Nova.Input.Primary.Internal" parent="Base.Widget.AppCompat.EditText">
        <item name="android:textAppearance">
            @style/TextAppearance.NovaFoundation.Regular.SubHeadline
        </item>
        <item name="android:paddingStart">@dimen/x2</item>
        <item name="android:paddingEnd">@dimen/x2</item>
        <item name="android:paddingTop">@dimen/x3</item>
        <item name="android:paddingBottom">@dimen/x1</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textColorHint">@color/hint_text</item>
        <item name="hintTextColor">@color/hint_text</item>
    </style>

    <style name="Widget.Nova.Input.Text" parent="Widget.Nova.Input.EditText">
        <item name="android:textAppearance">
            @style/TextAppearance.NovaFoundation.Regular.SubHeadline
        </item>
        <item name="android:textColorHint">@color/hint_text</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:maxLines">1</item>
        <item name="android:inputType">text</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <!-- Input -->

    <!-- Dialog -->

    <style name="Widget.Nova.ProgressBar.Indeterminate" parent="Widget.AppCompat.ProgressBar">
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateTint">@color/icon_primary</item>
    </style>

    <style name="BottomSheetDialog" parent="Theme.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetStyleWrapper</item>
        <item name="colorAccent">@color/android_system_accent</item>
    </style>

    <style name="bottomSheetStyleWrapper" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="behavior_peekHeight">600dp</item>
        <item name="backgroundTint">@color/bottom_sheet_background</item>
        <item name="shapeAppearanceOverlay">@style/CustomShapeAppearanceBottomSheetDialog</item>
    </style>

    <style name="CustomShapeAppearanceBottomSheetDialog">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">@dimen/x2</item>
        <item name="cornerSizeTopLeft">@dimen/x2</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="AccentAlertDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="buttonBarPositiveButtonStyle">@style/AccentDialogPositiveButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/AccentDialogNegativeButtonStyle</item>
    </style>

    <style name="AccentAlertDialogTheme.Reversed">
        <item name="buttonBarPositiveButtonStyle">@style/AccentDialogNegativeButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/AccentDialogPositiveButtonStyle</item>
    </style>

    <style name="AccentDialogPositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">?attr/colorAccent</item>
    </style>

    <style name="AccentDialogNegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/text_negative</item>
    </style>

    <!-- Dialog -->


    <!--   Bottom Navigation -->
    <style name="BottomNavigationView" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">10sp</item>
        <item name="android:fontFamily">?attr/fontSemiBold</item>
    </style>

</resources>