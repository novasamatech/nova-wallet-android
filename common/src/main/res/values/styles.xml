    </style>

    <style name="TextAppearance.NovaFoundation.Bold.LargeTitle">
        <item name="android:textSize">34sp</item>
    </style>

    <style name="TextAppearance.NovaFoundation.Bold.Title1">
        <item name="android:textSize">28sp</item>
    </style>

    <style name="TextAppearance.NovaFoundation.Bold.Title2">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="TextAppearance.NovaFoundation.Bold.Title3">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextAppearance.NovaFoundation.Regular.Body">
        <item name="android:textSize">17sp</item>
        <item name="lineHeight">22sp</item>
    </style>

    <style name="TextAppearance.NovaFoundation.Caption1" parent="TextAppearance.NovaFoundation.Regular">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextAppearance.NovaFoundation.Caps" parent="TextAppearance.NovaFoundation.Regular">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">11sp</item>
        <item name="android:letterSpacing">0.05</item>
    </style>

    <style name="TextAppearance.NovaFoundation.Regular.Title3">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextAppearance.NovaFoundation.Bold.SubHeadline">
        <item name="android:textSize">?attr/textSizeSubHeadline</item>
    </style>

    <style name="TextAppearance.NovaFoundation.Footnote" parent="TextAppearance.NovaFoundation.Regular">
        <item name="android:textSize">13sp</item>
        <item name="lineHeight">18sp</item>
    </style>

    <style name="TextAppearance.NovaFoundation.Regular.SubHeadline">
        <item name="android:textSize">?attr/textSizeSubHeadline</item>
    </style>

    <style name="TextAppearance.NovaFoundation.Regular" parent="TextAppearance.AppCompat.Title">
        <item name="android:fontFamily">?attr/fontRegular</item>
    </style>

    <style name="TextAppearance.NovaFoundation.Bold" parent="TextAppearance.AppCompat.Title">
        <item name="android:fontFamily">?attr/fontBold</item>
    </style>

    <style name="TextAppearance.NovaFoundation.Title3" parent="TextAppearance.NovaFoundation.Regular">
        <item name="android:textSize">?attr/textSizeTitle3</item>
    </style>

    <style name="TextAppearance.Nova.Header" parent="TextAppearance.AppCompat.Title">
        <item name="android:fontFamily">?attr/fontBold</item>
    </style>

    <style name="TextAppearance.NovaFoundation.Header1" parent="TextAppearance.Nova.Header">
        <item name="android:textSize">?attr/textSizeH1</item>
    </style>

    <style name="TextAppearance.NovaFoundation.Header2" parent="TextAppearance.Nova.Header">
        <item name="android:textSize">?attr/textSizeH2</item>
    </style>

    <style name="TextAppearance.NovaFoundation.Header3" parent="TextAppearance.Nova.Header">
        <item name="android:textSize">?attr/textSizeH3</item>
    </style>

    <style name="TextAppearance.NovaFoundation.Header4" parent="TextAppearance.Nova.Header">
        <item name="android:textSize">?attr/textSizeH4</item>
    </style>

    <style name="TextAppearance.NovaFoundation.Header5" parent="TextAppearance.Nova.Header">
        <item name="android:textSize">?attr/textSizeH5</item>
    </style>

    <style name="TextAppearance.NovaFoundation.CapsTitle1" parent="TextAppearance.Nova.Header">
        <item name="android:textSize">?attr/textSizeCapsTitle1</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="TextAppearance.NovaFoundation.CapsTitle2" parent="TextAppearance.Nova.Header">
        <item name="android:textSize">?attr/textSizeCapsTitle2</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="TextAppearance.NovaFoundation.Body0" parent="TextAppearance.AppCompat.Body1">
        <item name="android:fontFamily">?attr/fontRegular</item>
        <item name="android:textSize">?attr/textSizeB0</item>
    </style>

    <style name="TextAppearance.NovaFoundation.Body1" parent="TextAppearance.AppCompat.Body1">
        <item name="android:fontFamily">?attr/fontRegular</item>
        <item name="android:textSize">?attr/textSizeB1</item>
    </style>

    <style name="TextAppearance.NovaFoundation.Body2" parent="TextAppearance.AppCompat.Body1">
        <item name="android:fontFamily">?attr/fontRegular</item>
        <item name="android:textSize">?attr/textSizeB2</item>
    </style>

    <style name="TextAppearance.NovaFoundation.Body3" parent="TextAppearance.AppCompat.Body1">
        <item name="android:fontFamily">?attr/fontSemiBold</item>
        <item name="android:textSize">?attr/textSizeB3</item>
    </style>

    <!--Font styles-->

    <!-- Buttons -->

    <style name="Widget.Nova.Button" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/button_text_colors</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:textSize">?attr/textSizeB1</item>
        <item name="android:fontFamily">?attr/fontBold</item>
        <item name="android:minHeight">52dp</item>
    </style>

    <style name="Widget.Nova.Button.Iconic">
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:textSize">?attr/textSizeSubHeadline</item>
    </style>

    <style name="Widget.Nova.Button.Primary">
        <!--        <item name="android:background">@drawable/bg_button_primary_selector</item>-->
        <item name="appearance">fill</item>
    </style>

    <style name="Widget.Nova.Button.Outline">
        <item name="appearance">outline</item>
    </style>

    <style name="AccentBlue" parent="">
        <item name="colorAccent">@color/accentBlue</item>
    </style>

    <style name="Widget.Nova.Puller" parent="">
        <item name="android:layout_height">2dp</item>
        <item name="android:layout_width">35dp</item>
        <item name="android:background">@drawable/bg_puller</item>
    </style>

    <style name="Widget.Nova.ActionButton" parent="TextAppearance.AppCompat.Body2">
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:gravity">center</item>
        <item name="android:drawableTint">@color/actions_color</item>
        <item name="android:textColor">@color/actions_color</item>
        <item name="android:drawablePadding">4dp</item>
    </style>

    <style name="Widget.Nova.Switch" parent="">
        <item name="android:background">@drawable/divider_drawable</item>
        <item name="android:textAppearance">@style/TextAppearance.NovaFoundation.Body1</item>
        <item name="android:textColor">@color/gray1</item>
    </style>

    <!-- Buttons -->

    <!-- Input -->

    <style name="Widget.Nova.Input.Primary.External" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:textColorHint">@color/colorHint</item>
        <item name="hintTextColor">@color/colorHint</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="boxCollapsedPaddingTop">@dimen/x1</item>
    </style>

    <style name="Widget.Nova.Input.Primary.Internal" parent="Base.Widget.AppCompat.EditText">
        <item name="android:textAppearance">@style/TextAppearance.NovaFoundation.Body1</item>
        <item name="android:paddingStart">@dimen/x2</item>
        <item name="android:paddingEnd">@dimen/x2</item>
        <item name="android:paddingTop">@dimen/x3</item>
        <item name="android:paddingBottom">@dimen/x1</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <!-- Input -->

    <!-- Dialog -->

    <style name="Widget.Nova.ProgressBar" parent="Widget.AppCompat.ProgressBar">
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateDrawable">@anim/progress_rotate</item>
        <item name="android:indeterminateDuration">1300</item>
    </style>

    <style name="BottomSheetDialog" parent="Theme.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetStyleWrapper</item>
        <item name="android:windowBackground">@color/bottomSheetBackground</item>
    </style>

    <style name="bottomSheetStyleWrapper" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="behavior_peekHeight">600dp</item>
        <item name="backgroundTint">@color/black</item>
        <item name="shapeAppearanceOverlay">@style/CustomShapeAppearanceBottomSheetDialog</item>
    </style>

    <style name="CustomShapeAppearanceBottomSheetDialog">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">@dimen/x2</item>
        <item name="cornerSizeTopLeft">@dimen/x2</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AccentAlertDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="buttonBarPositiveButtonStyle">@style/AccentDialogPositiveButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/AccentDialogNegativeButtonStyle</item>
    </style>
    t

    <style name="AccentDialogPositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">?attr/colorAccent</item>
    </style>

    <style name="AccentDialogNegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/error_red</item>
    </style>

    <!-- Dialog -->


    <!--   Bottom Navigation -->
    <style name="BottomNavigationView" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">10sp</item>
        <item name="android:fontFamily">?attr/fontSemiBold</item>
    </style>

</resources>