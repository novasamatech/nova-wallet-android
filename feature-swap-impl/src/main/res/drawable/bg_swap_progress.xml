<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/progress">
        <rotate
            android:fromDegrees="360"
            android:pivotX="50%"
            android:pivotY="50%"
            android:toDegrees="0">

            <!--  Assuming view width is 64dp and required padding of 0dp, so  innerRadius + thickness = 64/2         -->
            <shape
                android:innerRadius="27dp"
                android:shape="ring"
                android:thickness="5dp"
                android:useLevel="false">

                <corners android:radius="5dp" />

                <gradient
                    android:centerColor="@color/cell_background_pressed"
                    android:endColor="@android:color/transparent"
                    android:startColor="@color/icon_accent"
                    android:type="sweep" />
            </shape>
        </rotate>
    </item>
</layer-list>